    <div class="container-fluid w-100 d-flex justify-content-center ad">
        <img src="~/images/ad.gif" />
    </div>
    <div class="container-fluid w-100 py-50 d-flex justify-content-center align-items-center"
         style="background-image:url(../images/P/pexels-scott-webb-1029615.jpg);background-size:100% 100%">
        <div class="title">
            <div class="title">
                <div class="title-top">
                    <h2>Create Your Lifestyle</h2>
                </div>
                <div class="title-bottom">
                    <h2>買新房 找雛居 台灣首家上市建築代銷 雛居團隊</h2>
                </div>
            </div>
        <form id="buildingSearchForm" action="@Url.Action("Index","BuildingCase")" method="post">
            <div class="btn-select">
                <!--地區-->
                <div class="option mb-3">
                    <h5>請選擇地區 </h5>
                    <div id="regionRegion" class="selectRegion">
                    </div>
                </div>
                <!--坪數-->
                <div class="option mb-3">
                    <h5>坪數</h5>
                    <div id="areaRegion" class="selectRegion">
                    </div>
                </div>
                <!--房型-->
                <div class="option mb-3">
                    <h5>
                        房型<span>(可複選)</span>
                    </h5>
                    <div id="roomsRegion" class="selectRegion">
                    </div>
                </div>
                <!--屋況-->
                <div class="option mb-3">
                    <h5>
                        屋況<span>(可複選)</span>
                    </h5>
                    <div id="statusRegion" class="selectRegion">
                    </div>
                </div>
                <!--特性-->
                <div class="option mb-3">
                    <h5>
                        特性<span>(可複選)</span>
                    </h5>
                    <div id="tagsRegion" class="selectRegion">
                    </div>
                </div>
            </div>
            <div class="search row justify-content-center">
                <button id="submitSearchBtn" style="padding:2px 15px;">
                    <i class="fas fa-search"></i>
                    尋找建案
                </button>
            </div>
            <input type="hidden" id="toSearchRegion" name="region" />
            <input type="hidden" id="toSearchArea" name="area" />
            <input type="hidden" id="toSearchRooms" name="rooms" />
            <input type="hidden" id="toSearchStatus" name="status" />
            <input type="hidden" id="toSearchTags" name="tags" />
        </form>
        </div>
    </div>


    @*這裡是房市新訊的部分*@
    <div class="container-fluid w-100 py-50 news">
        <div class="news-title">
            <h1 class="font-weight-bold">房市新訊</h1>
            <p class="text-white">優質新房個案介紹，全台社區時價登錄，提供您購物、賞屋最新報導資訊</p>
        </div>
        <div class="row justify-content-center">
            @foreach (var item in Model.building)
            {
                <div class="col-3 news-img">
                    <a href="~/BuildingIntro/Page/@item.建案序號">
                        <img src="~/@item.picURL" class=".img-fluid">
                        <div class="news-content">
                            <h5>@item.建案名稱</h5>
                            <p>@item.基地位置</p>
                        </div>
                    </a>
                </div>
            }
        </div>
        <div class="row justify-content-center mt-5">
            <a href="~/BuildingList">
                <input type="button" class="learn-more" value="查看更多">
            </a>
        </div>

    </div>


    @*這裡是活動快報的部分*@
    <div class="container-fluid w-100 py-50 act">
        <div class="act-title">
            <h1 class="font-weight-bold">活動快報</h1>
            <p class="text-white">最新活動報你知，各項專屬會員的優惠請不要錯過</p>
        </div>
        <div class="row justify-content-center flex-wrap">
            @foreach(var item in Model.ActivityOutline)
            {
                <div class="col-4 activity-img">
                    <a href="~/ActivityContent/@item.Id">
                        <img src="~/@item.picture" />
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="container-fluid w-100 py-50 about-us">
        <div class="about-us-title text-center">
            <h1 class="font-weight-bold">關於我們</h1>
        </div>
        <div class="row justify-content-center align-items-center mt-5 pt-5">
            <div class="col-4">
                <img src="../images/p/aboutus.jpg" alt="">
            </div>
            <div class="col-4">
                <h4>Dream house isn't dream anymore</h4>
                <p>
                    Semper arcu mauris aliquam lacus. Massa erat vitae ultrices pharetra scelerisque. Ipsum, turpis
                    facilisis tempor pulvinar.
                </p>
                <h4>Brooklyn Simmons</h4>
                <p>Artist</p>
            </div>
        </div>
    </div>

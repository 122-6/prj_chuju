                <div class="area">
                    <fieldset id="area-fieldset">
                        <span>地區</span>
                        <input type="button" value="不限">
                        <!--依縣市動態新增按鈕-->
                    </fieldset>
                </div>
                <div class="price">
                    <fieldset>
                        <span>總價</span>
                        <input type="button" value="不限">
                        <input type="button" value="1000萬以下">
                        <input type="button" value="1000萬-1500萬">
                        <input type="button" value="1500萬-2500萬">
                        <input type="button" value="2500萬-3500萬">
                        <input type="button" value="3500萬以上">
                        <input type="button" value="自訂">
                    </fieldset>
                </div>
                <div class="room-type">
                    <fieldset>
                        <span>房型</span>
                        <input type="button" value="不限">
                        <input type="button" value="套房">
                        <input type="button" value="2房">
                        <input type="button" value="3房">
                        <input type="button" value="4房以上">
                        <input type="button" value="透天">
                    </fieldset>
                </div>
            </div>
            <div class="search row justify-content-center">
                <button>
                    <i class="fas fa-search"></i>
                    尋找建案
                </button>
            </div>
        </div>
    </div>



@model List<prj_chuju.Models.class_articleOutline>

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="~/style/newsStyle.css">

<main>
    <div class="container-fluid py-50 news">
        <h1 class="mt-3 mb-5 ml-5 font-weight-bold">所有文章</h1>

        <div class="w-75 d-flex flex-wrap mx-auto">

            @foreach (var item in Model)
            {
                <div class="col-6 news-item mb-30">
                    <figure>

                        @*這裡需要修正連結*@
                        <a href="@Url.Action("article","BrandArticle",new {id=item.id })"><img src="~/@item.pictureURL" alt="" class="w-75"></a>
                        <figcaption>

                            @*這個tag的部分要考慮要不要做*@
                            <a href="#2">
                                <i class="fas fa-tag"></i>
                                @*item.tag*@
                            </a>
                            <span>2022/1/18</span>
                        </figcaption>
                    </figure>

                    @*這裡需要修正連結*@
                    <a href="@Url.Action("article","BrandArticle",new {id=item.id })">
                        <h3>@item.title</h3>
                    </a>
                    <span>@item.articleSource</span>
                </div>
            }

        </div>

    </div>
</main>
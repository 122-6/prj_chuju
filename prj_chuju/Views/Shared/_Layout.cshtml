    @*線上客服*@

    <link href="~/style/Client.css" rel="stylesheet" />
    <div class="mainClient">
        <button class="btnTalk">
            客服
        </button>
        <div class="talk-view disppear" id="talk-view">
            <div class="title">雛居線上客服</div>
            <div class="message-box">
                <div class="service"></div>
                <div class="client"></div>
            </div>
            <div class="input-box">
                <input type="hidden" id="clientID" value="" />
                <input type="text" id="message" placeholder="想問什麼呢？" />
                <button id="sendmessage">
                    <i class="fa-solid fa-paper-plane"></i>
                </button>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.3.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        $(function () {
            var chat = $.connection.chatHub;
            chat.client.sendMessage = function (message) {
                $(".service").append('<div class="content" >' + htmlEncode(message) + '</div>');
            };

            chat.client.newClient = function (clientID) {
                $("#clientID").val(clientID);
            }

            $.connection.hub.start().done(function () {
                chat.server.clientConnection();
                $('#sendmessage').click(function () {
                    chat.server.clientSend($('#message').val(), $("#clientID").val());
                    $(".client").append('<div class="content" >' + htmlEncode($('#message').val()) + '</div>');
                    $('#message').val('').focus();
                });

                $('#message').keydown(function (event) {
                    if (event.keyCode == 13) {
                        chat.server.clientSend($('#message').val(), $("#clientID").val());
                        $(".client").append('<div class="content" >' + htmlEncode($('#message').val()) + '</div>');
                        $('#message').val('').focus();
                    }
                });
            });
            function htmlEncode(value) {
                var encodedValue = $('<span>').text(value).html();
                return encodedValue;
            };

            $(".btnTalk").click(function () {
                if ($("#talk-view").hasClass("disppear")) {
                    $("#talk-view").removeClass("disppear");
                }
                else {
                    $("#talk-view").addClass("disppear")
                }

            });
        });
    </script>
